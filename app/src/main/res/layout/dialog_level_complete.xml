<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_levelbox">

    <ImageView
        android:id="@+id/dialog_level_complete_star_1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@+id/dialog_level_complete_star_2"
        app:layout_constraintStart_toStartOf="@+id/dialog_level_complete_guideline_01"
        app:layout_constraintTop_toTopOf="@+id/dialog_level_complete_star_2"
        app:srcCompat="@drawable/anim_star" />

    <ImageView
        android:id="@+id/dialog_level_complete_star_3"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@+id/dialog_level_complete_guideline_02"
        app:layout_constraintStart_toEndOf="@+id/dialog_level_complete_star_2"
        app:layout_constraintTop_toTopOf="@+id/dialog_level_complete_star_2"
        app:srcCompat="@drawable/anim_star" />

    <ImageView
        android:id="@+id/dialog_level_complete_star_2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/anim_star" />

    <TextView
        android:id="@+id/dialog_level_complete_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="casual"
        android:text="Title"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/dialog_level_complete_guideline_02"
        app:layout_constraintStart_toStartOf="@+id/dialog_level_complete_guideline_01"
        app:layout_constraintTop_toBottomOf="@+id/dialog_level_complete_star_3" />

    <TextView
        android:id="@+id/dialog_level_complete_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Message"
        android:textColor="#797979"
        app:layout_constraintEnd_toEndOf="@+id/dialog_level_complete_line"
        app:layout_constraintStart_toStartOf="@+id/dialog_level_complete_line"
        app:layout_constraintTop_toBottomOf="@+id/dialog_level_complete_title" />

    <Button
        android:id="@+id/dialog_level_complete_next"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/ic_back"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintEnd_toStartOf="@+id/dialog_level_complete_guideline_02"
        app:layout_constraintTop_toBottomOf="@+id/dialog_level_complete_message" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dialog_level_complete_guideline_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20194647" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/dialog_level_complete_guideline_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <ImageView
        android:id="@+id/dialog_level_complete_line"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_level_complete_message"
        app:layout_constraintDimensionRatio="w,10:2"
        app:layout_constraintEnd_toStartOf="@+id/dialog_level_complete_guideline_02"
        app:layout_constraintStart_toStartOf="@+id/dialog_level_complete_guideline_01"
        app:layout_constraintTop_toTopOf="@+id/dialog_level_complete_title"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@drawable/ic_line" />

    <Button
        android:id="@+id/dialog_level_complete_back"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_level_complete_next"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintStart_toStartOf="@+id/dialog_level_complete_guideline_01"
        app:layout_constraintTop_toTopOf="@+id/dialog_level_complete_next" />

</androidx.constraintlayout.widget.ConstraintLayout>